{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",  // Use CommonJS if you want compatibility with Node.js
      "outDir": "./dist",    // Output directory for the compiled JS files
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "allowJs": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }
  